<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.salah.Profile"
    tools:showIn="@layout/profile_activity"
    android:background="#3db3ae"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3db3ae"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/worker2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salah Mohamed"
            android:textColor="@color/base"
            android:textSize="25sp"
            android:gravity="center_horizontal"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingBottom="20dp"
            android:src="@drawable/star3"
            android:gravity="center_horizontal"
            />

        <TextView
            
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:text="Name:Salah Mohamed"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:gravity="center_horizontal"            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:text="Age: 24 year"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:gravity="center_horizontal"            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:text="Job: plumber"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:gravity="center_horizontal"            android:layout_height="30dp"
            android:layout_marginBottom="2dp"
            android:text="Address: 21 Salah street"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Medals"
        android:textSize="25sp"
        android:layout_marginLeft="24dp"
        android:textColor="#ffffff"
        />
<ImageView
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:src="@drawable/ahmed"
    android:layout_marginLeft="18dp"
    android:layout_marginTop="4dp"
    />
</LinearLayout>
</LinearLayout>
</ScrollView>

